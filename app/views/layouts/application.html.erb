<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top">	
		<div class="navbar-inner">
			<div class="container">
			 <a class="btm btn-navbar" data-toggle="collapse" data-target=".nav-collapse">	
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>	
					
				<a class="brand" href="#">Ratebeer</a>
				<div class="nav-collapse">
					<ul class="nav nav-tabs">
					 <li><%= link_to 'breweries', breweries_path %></li>
					 <li><%= link_to 'beers', beers_path %></li>
					 <li><%= link_to 'ratings', ratings_path %></li>
					 <li><%= link_to 'users', users_path %></li>
					 <li><%= link_to 'clubs', beer_clubs_path %></li>
					 <li><%= link_to 'beer places', places_path %></li>
					 <li><%= link_to 'styles', styles_path %></li>
					
					<%if not current_user.nil? %>
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.username %></a>
							<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
								<li class="dropdown"><%= link_to "#{current_user.username}", user_path(current_user) %></li>
								<li class="dropdown"><%= link_to 'rate a beer', new_rating_path %></li>
								<li class="dropdown"><%= link_to 'join a club', new_membership_path %></li>
								<li class="dropdown"><%= link_to 'signout', signout_path, method: :delete %></li>
							</ul>
						</li>
					<% else %>
								<li><%= link_to 'signin', signin_path %></li>
								<li><%= link_to 'signup', signup_path %></li>
					<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class ="row">
			<div class = "span9">
				<%= yield %>
			</div>
			<div class="span3">
				<img src="http://www.cs.helsinki.fi/u/mluukkai/olut.jpg" width="100">
			</div>
		</div>
	</div>

</body>
</html>
